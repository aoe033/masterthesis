\newglossaryentry{transceiver}{name={transceiver},
description={Short for transmitter-receiver, a device that both transmits and receives analog or digital signals.}}

\newglossaryentry{xcvr}{name={XCVR},
description={Altera transceiver technology.}}

\newglossaryentry{sram}{name={SRAM},
description={Short for Static Random Access Memory, a type of volatile memory that uses internal feedback to keep on its data.\cite{weste11} Volatile meaning that the memory loses all the data once the power is switched off.}}

\newglossaryentry{flash}{name={flash},
description={A nonvolatile memory type known by its name because of its ability to erase memory blocks all at once "in a flash".\cite{weste11} Nonvolatile meaning that the memory will keep all its data even if the power is switched off.}}

\newglossaryentry{fifo}{name={FIFO},
description={Short for First In First Out, a shift-register connected as a circular buffer. The data is written and read in the same order i.e. first data in, first data out. FIFOs can be used to buffer data between two asynchronous streams.\cite{weste11}}}

\newglossaryentry{com}{name={COM port},
description={Serial Communications port on a PC.}}

\newglossaryentry{usbrs}{name={USB-to-RS232 adapter},
description={Adapter to convert between USB and Rs-232 signaling and voltages.}}

\newglossaryentry{piso}{name={PISO},
description={Short for Parallel In Serial Out, a PISO is a shift-register circuit for serializing input parallel data.}}

\newglossaryentry{sipo}{name={SIPO},
description={Short for Serial In Parallel Out, a SIPO is a shift-register circuit that converts input serial data into parallel data.}}

